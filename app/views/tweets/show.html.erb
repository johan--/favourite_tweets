<%- model_class = Tweet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tweet_id) %>:</strong></dt>
  <dd><%= @tweet.tweet_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tweet_user_name) %>:</strong></dt>
  <dd><%= @tweet.tweet_user_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tweet_user_screen_name) %>:</strong></dt>
  <dd><%= @tweet.tweet_user_screen_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tweet_user_profile_image_url) %>:</strong></dt>
  <dd><%= @tweet.tweet_user_profile_image_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @tweet.message %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lang) %>:</strong></dt>
  <dd><%= @tweet.lang %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_viewed) %>:</strong></dt>
  <dd><%= @tweet.is_viewed %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tweets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tweet_path(@tweet), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tweet_path(@tweet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
